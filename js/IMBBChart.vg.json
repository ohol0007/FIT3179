{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "title": "Infant Mortality by Number of births",
  "data":{
    "url": "https://raw.githubusercontent.com/ohol0007/FIT3179/main/data/FIT3179%20Assignment%202%20Data.csv"
  },
  "params": [
    {
      "name": "Year_Selection",
      "bind": {
        "input": "select",
        "options": [
          "null",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020"
        ],
        "name": "Year Selection"
      }
    }
  ],
  "transform": [
    {"filter": "datum.Infant_Deaths >0"},
    {"filter":"datum.Number_Births>0"},
    {
      "filter": "Year_Selection == null || datum.Year == Year_Selection"
    }
  ],
  "selection": {
    "continent_highlight": {
      "type": "multi",
      "fields": ["Continent"],
      "bind": "legend"
    }
  },
  "mark": "circle",
  "encoding": {
    "x":{
      "field": "Number_Births",
      "type": "quantitative",
      "title": "Number of Births",
      "axis": {"tickCount": 8},
      "scale": {"type": "log"}
    },
    "y": {
      "field": "Infant_Deaths",
      "type": "quantitative",
      "title": "Number of Infant Deaths",
      "axis": {"tickCount": 8},
      "scale": {"type": "log"}
    },
    "color":{
      "field":"Continent",
      "type": "nominal",
      "scale":{
        "domain": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "range":[
          "#e41a1c",
          "#984ea3",
          "#ff7f00",
          "#a6cee3",
          "#377eb8",
          "#a65628"
        ]
      }
    },
    "opacity":{
      "condition": {"selection": "continent_highlight", "value": 0.6},
      "value": 0.2
    }, 
    "size": {
      "field": "Total_Population",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
        "range": [10, 50, 150, 200, 300, 400]
      },
      "legend": {"format": ".1s"}
    },
    "tooltip": [
      {"field": "Country_Name", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "nominal"},
      {"field": "Total_Population", "type": "quantitative", "format":",", "title": "Population"},
      {"field": "Infant_Deaths", "type": "quantitative","format": ",", "title": "Infant Deaths"},
      {"field": "Number_Births", "type": "quantitative", "format": ",", "title": "Number of births"}
    ]
  }
}
